                        <img class="center-block visible-xs"
                             alt="down arrow" height="100px"
                             src="/images/down_arrow-xl.png"/>
                    </div>
                    <div class="col-xs-12 col-sm-2">
                        <img class="img-responsive center-block"
                             alt="Red9 DSP icon"
                            {{{responsiveImage '/images/icon_r9dsp.png' 4}}}/>

